/* pages/viewer/viewer.wxss */
page {
    background: #F2F6FC;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: relative;
}

/*article*/
.article {
    padding: 20rpx;
    background: #FFF;
    margin-bottom:20rpx;
    width:92vw;
    border-radius:6px;

}

.article .title {
    padding-bottom: 30rpx;
    font-size: 46rpx;
    font-weight: bold
}

.article .author-info {
    overflow: hidden;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    white-space:nowrap;
    text-overflow: ellipsis;
    color: #6A6A6A;
}

.content{
  padding: 20rpx;
  background: #FFF;
  margin-bottom:20rpx;
  border-radius:6px;

}

.content text {
    display: block;
    font-size: 35rpx;
    color: #6A6A6A;
    line-height: 60rpx;
    margin-bottom: 20rpx;
    text-align: justify;
    overflow: hidden;
    word-wrap:  break-word; 
}

.container{
  padding:15rpx;
  box-sizing:border-box;
  margin-bottom:20rpx;
  background: #F2F6FC;
}

.container .footer {
	border-top: 1px solid #ccc;
	font-size: 30rpx;
	color: #999;
	padding-left: 480rpx;
	padding-top: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.container .footer .operation {
	display: flex;
}

.container .footer .operation .list-container {
	display: flex;
	align-items: center;
  width: 3rem;
  color:#6A6A6A;
}

.comment{
  padding: 20rpx;
  background: #FFF;
  margin-bottom:20rpx;
  width:92vw;
  border-radius:6px;

}

.comment .title {
  display:block;
  padding: 10rpx;
  margin-bottom:20rpx;
}

.comment .title text{
  color:black;
  font-size: 46rpx;
  font-weight: bold;
}

.comment .judgement text{
  display: block;
  font-size: 35rpx;
  color: #6A6A6A;
  line-height: 60rpx;
  margin-bottom: 20rpx;
  text-align: justify;
  overflow: hidden;
  word-wrap:  break-word; 
}

.comment .footer {
	border-top: 1px solid #ccc;
	font-size: 30rpx;
	color: #999;
	padding-left: 580rpx;
	padding-top: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
 
.commodity_attr_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  margin-top: 380rpx;
  margin-left: 10%;
  z-index: 2000;
  background: #fff;
  border-radius: 10px;
}
.btn-line{
  width: 1px;
  background-color: #dcdcdc;
}
.btn-view{
  width: 100%;
  display: flex;
  height: 40px;
  flex-direction: row;
  justify-content: space-around
}
.line-top{
   width: 100%;
   height: 1px;
   background-color: #dcdcdc;
}
.btn-cancel{
  width: 49%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.dialog-title{
  margin-top: 15px;
