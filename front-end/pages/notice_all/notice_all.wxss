/* pages/my/involved/involved.wxss */

.round-click {
  height: 120rpx;
  width: 120rpx;
  background-color: #e9ec15;
  border-radius: 100%;
  position: fixed;
  bottom: 70rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
  color: white;
  font-size: 35px;
}

.swiper-tab {
  width: 80%;
  text-align: center;
  line-height: 110rpx;
  border-bottom: 1px solid #777;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tab-item {
  flex: 1;
  font-size: 30rpx;
  display: inline-block;
  color: #777;
}

.on {
  color: #05a04a;
  border-bottom: 5rpx solid #05a04a;
}

.swiper {
  display: block;
  height: 100%;
  width: 80%;
  overflow: hidden;
}

.swiper view {
  text-align: center;
  padding-top: 100rpx;
  margin: 20rpx;
}

.weui-media-box__hd weui-media-box__hd_in-appmsg {
  width: 80%;
  background: #f2f6fc;
}

.main {
  width: 100%;
}

.tit {
  background: #fff;
}

.but {
  width: 10%;
  padding-right: 20rpx;
  float: right;
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.row {
  overflow: hidden;
  line-height: 35px;
  border-bottom: 1px solid #ccc;
  background: #fff;
  color: #0c0c0c;
  margin: 20rpx;
  border-radius: 6px;
}

scroll-view {
  display: block;
  width: 100%;
  background: #f2f6fc;
}

.weui-media-box__title {
  font-size: 20px;
}

.weui-media-box_appmsg {
  margin: 20rpx;
  background: #fff;
  border-radius: 6px;
}

.weui-navbar__item.weui-bar__item_on {
  color:#409eff;
}

.weui-navbar__slider{
    background: #409eff;
}