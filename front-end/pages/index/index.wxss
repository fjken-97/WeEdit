/**index.wxss**/
 
.content{
  margin:0px auto;width:100%;height:180px;
  background:#ffffff
}
.content swiper{
  height:90%;
}

.slide-image{
  width: 91%;
  height: 100%;
  margin-left: 4%;
  }
/* 流动图片设置*/


.nav{
  display:flex;
  flex-direction: row;
  text-align: center;
}
.nav-item{
  width:33.3%;
  margin-top:20px;
  font-size: 15px;
}

.hr{
  height: 15px;
  background-color:#cccccc;
  margin-top:30px;
  opacity:0.4;
}
.head{
  display: flex;
  flex-direction: row;
  margin:10px;
  font-size:15px;
  color:#999999;
}
.right{
  position:absolute;
  right:10px;
  color:#ccc;
}
.hr2{
  height: 2px;
  background-color: #ccc;
  opacity:0.2;
}







.item{
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  margin-bottom: 5px;
}

.desc{
  margin-left: 20px;
  line-height: 30px;
}
.title{
  display:flex;
  flex-direction: row;

}
.count{
  display:flex;
  flex-direction: row;
  font-size: 12px;
  color:#999999;
}

.pinglun{
  position: absolute;
  right:10px;
}









.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.intro {
  margin: 50px;
  text-align: center;
}

.search-wrapper{
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  top: 0;
  left: 0;
}

.search-input{
  width: 700rpx;
  height: 70rpx;
  margin: 15rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #cdcdcd;
}